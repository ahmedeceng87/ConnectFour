<Window
    x:Class="ConnectFour.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="clr-namespace:ConnectFour.Converters"
    xmlns:local="clr-namespace:ConnectFour"
    Title="Connect Four"
    Width="900"
    Height="760"
    Background="Black"
    WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <conv:PlayerToBrushConverter x:Key="PlayerToBrushConverter" />
        <conv:PlayerToVisibilityConverter x:Key="PlayerToVisibilityConverter" />
        <BounceEase
            x:Key="BounceEase"
            Bounces="2"
            Bounciness="2"
            EasingMode="EaseOut" />
    </Window.Resources>

    <DockPanel Margin="12" LastChildFill="True">

        <!--  Top Bar  -->
        <StackPanel
            Margin="0,0,0,12"
            HorizontalAlignment="Center"
            DockPanel.Dock="Top"
            Orientation="Horizontal">
            <Button
                Width="120"
                Height="34"
                Command="{Binding NewGameCommand}"
                Content="New Game" />
            <TextBlock
                Margin="12,0,0,0"
                VerticalAlignment="Center"
                FontWeight="Bold"
                Foreground="White"
                Text="{Binding StatusText}" />
        </StackPanel>

        <!--  Board: fixed internal size so Viewbox scales it evenly  -->
        <Viewbox
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Stretch="Uniform">
            <!--  Board container fixed size  -->
            <Border
                Width="700"
                Height="600"
                Padding="8"
                Background="#1E63B6"
                CornerRadius="12">
                <ItemsControl ItemsSource="{Binding Cells}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="7" Rows="6" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="6" MouseDown="Cell_MouseDown">

                                <!--  Hole background (always visible)  -->
                                <Ellipse Fill="Black" Opacity="0.25" />
                                <Ellipse Opacity="0.4" Stroke="Black" />

                                <!--  Token container  -->
                                <Grid
                                    Width="80"
                                    Height="80"
                                    Visibility="{Binding Player, Converter={StaticResource PlayerToVisibilityConverter}}">

                                    <!--  Bounce target transform  -->
                                    <Grid.RenderTransform>
                                        <TranslateTransform Y="-500" />
                                    </Grid.RenderTransform>

                                    <!--  Base player color  -->
                                    <Ellipse
                                        Fill="{Binding Player, Converter={StaticResource PlayerToBrushConverter}}"
                                        Stroke="Black"
                                        StrokeThickness="1" />

                                    <!--  Radial shading  -->
                                    <Ellipse>
                                        <Ellipse.Fill>
                                            <RadialGradientBrush Center="0.5,0.5" RadiusX="0.9" RadiusY="0.9">
                                                <GradientStop Offset="0.65" Color="#00000000" />
                                                <GradientStop Offset="1.0" Color="#55000000" />
                                            </RadialGradientBrush>
                                        </Ellipse.Fill>
                                    </Ellipse>

                                    <!--  Glossy highlight  -->
                                    <Ellipse
                                        Width="50"
                                        Height="25"
                                        Margin="0,12,0,0"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Top"
                                        Opacity="0.25">
                                        <Ellipse.Fill>
                                            <RadialGradientBrush Center="0.5,0.5" GradientOrigin="0.5,0.3" RadiusX="0.8" RadiusY="0.8">
                                                <GradientStop Offset="0" Color="#80FFFFFF" />
                                                <GradientStop Offset="1" Color="#00FFFFFF" />
                                            </RadialGradientBrush>
                                        </Ellipse.Fill>
                                    </Ellipse>

                                    <!--  Bounce animation style applied HERE  -->
                                    <Grid.Style>
                                        <Style TargetType="Grid">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Player}" Value="{x:Static local:Player.Red}">
                                                    <DataTrigger.EnterActions>
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <DoubleAnimation
                                                                    EasingFunction="{StaticResource BounceEase}"
                                                                    Storyboard.TargetProperty="RenderTransform.(TranslateTransform.Y)"
                                                                    From="-500"
                                                                    To="0"
                                                                    Duration="0:0:0.55" />
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </DataTrigger.EnterActions>
                                                </DataTrigger>

                                                <DataTrigger Binding="{Binding Player}" Value="{x:Static local:Player.Yellow}">
                                                    <DataTrigger.EnterActions>
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <DoubleAnimation
                                                                    EasingFunction="{StaticResource BounceEase}"
                                                                    Storyboard.TargetProperty="RenderTransform.(TranslateTransform.Y)"
                                                                    From="-500"
                                                                    To="0"
                                                                    Duration="0:0:0.55" />
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </DataTrigger.EnterActions>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Grid.Style>
                                </Grid>
                            </Grid>
                        </DataTemplate>

                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Border>
        </Viewbox>
    </DockPanel>
</Window>
