<Window
    x:Class="ConnectFour.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:ConnectFour"
    xmlns:conv="clr-namespace:ConnectFour.Converters"
    Title="Connect Four"
    WindowStartupLocation="CenterScreen"
    Background="Black"
    Width="900"
    Height="760">
    <Window.Resources>
        <conv:PlayerToBrushConverter x:Key="PlayerToBrushConverter" />
        <BounceEase
            x:Key="BounceEase"
            Bounces="2"
            Bounciness="2"
            EasingMode="EaseOut" />
    </Window.Resources>

    <DockPanel Margin="12" LastChildFill="True">

        <!-- Top Bar -->
        <StackPanel
            DockPanel.Dock="Top"
            Orientation="Horizontal"
            HorizontalAlignment="Center"
            Margin="0,0,0,12">
            <Button
                Width="120"
                Height="34"
                Command="{Binding NewGameCommand}"
                Content="New Game" />
            <TextBlock
                Margin="12,0,0,0"
                VerticalAlignment="Center"
                Foreground="White"
                FontWeight="Bold"
                Text="{Binding StatusText}" />
        </StackPanel>

        <!-- Board: fixed internal size so Viewbox scales it evenly -->
        <Viewbox Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center">
            <!-- Board container fixed size -->
            <Border Width="700" Height="600" Padding="8" Background="#1E63B6" CornerRadius="12">
                <ItemsControl ItemsSource="{Binding Cells}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="7" Rows="6" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <!-- Each cell -->
                            <Grid MouseDown="Cell_MouseDown" Margin="6">
                                <!-- Background hole -->
                                <Ellipse Fill="#0F000000" Opacity="0.08"/>

                                <!-- Token with animation -->
                                <Canvas>
                                    <Ellipse Width="80" Height="80"
                                             Fill="{Binding Player, Converter={StaticResource PlayerToBrushConverter}}">
                                        <Ellipse.RenderTransform>
                                            <TranslateTransform Y="0"/>
                                        </Ellipse.RenderTransform>
                                        <Ellipse.Style>
                                            <Style TargetType="Ellipse">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Player}" Value="{x:Static local:Player.Red}">
                                                        <DataTrigger.EnterActions>
                                                            <BeginStoryboard>
                                                                <Storyboard>
                                                                    <DoubleAnimation
                                                                        Storyboard.TargetProperty="RenderTransform.(TranslateTransform.Y)"
                                                                        From="-500" To="0" Duration="0:0:0.55"
                                                                        EasingFunction="{StaticResource BounceEase}"/>
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </DataTrigger.EnterActions>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Player}" Value="{x:Static local:Player.Yellow}">
                                                        <DataTrigger.EnterActions>
                                                            <BeginStoryboard>
                                                                <Storyboard>
                                                                    <DoubleAnimation
                                                                        Storyboard.TargetProperty="RenderTransform.(TranslateTransform.Y)"
                                                                        From="-500" To="0" Duration="0:0:0.55"
                                                                        EasingFunction="{StaticResource BounceEase}"/>
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </DataTrigger.EnterActions>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Ellipse.Style>
                                    </Ellipse>
                                </Canvas>

                                <!-- Hole outline -->
                                <Ellipse Stroke="Black" Opacity="0.18"/>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Border>
        </Viewbox>
    </DockPanel>
</Window>
