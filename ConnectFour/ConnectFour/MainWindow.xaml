<Window
    x:Class="ConnectFour.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="clr-namespace:ConnectFour.Converters"
    xmlns:local="clr-namespace:ConnectFour"
    Title="Connect Four"
    Width="900"
    Height="760"
    Background="Black"
    WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <conv:PlayerToBrushConverter x:Key="PlayerToBrushConverter" />
        <BounceEase
            x:Key="BounceEase"
            Bounces="2"
            Bounciness="2"
            EasingMode="EaseOut" />
    </Window.Resources>

    <DockPanel Margin="12" LastChildFill="True">

        <!--  Top Bar  -->
        <StackPanel
            Margin="0,0,0,12"
            HorizontalAlignment="Center"
            DockPanel.Dock="Top"
            Orientation="Horizontal">
            <Button
                Width="120"
                Height="34"
                Command="{Binding NewGameCommand}"
                Content="New Game" />
            <TextBlock
                Margin="12,0,0,0"
                VerticalAlignment="Center"
                FontWeight="Bold"
                Foreground="White"
                Text="{Binding StatusText}" />
        </StackPanel>

        <!--  Board: fixed internal size so Viewbox scales it evenly  -->
        <Viewbox
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Stretch="Uniform">
            <!--  Board container fixed size  -->
            <Border
                Width="700"
                Height="600"
                Padding="8"
                Background="#1E63B6"
                CornerRadius="12">
                <ItemsControl ItemsSource="{Binding Cells}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="7" Rows="6" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid MouseDown="Cell_MouseDown" Margin="6">
                                <!-- Background hole -->
                                <Ellipse Fill="#0F000000" Opacity="0.08"/>

                                <!-- Token container -->
                                <Grid Width="80" Height="80">
                                    <Grid.Style>
                                        <Style TargetType="Grid">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Player}" Value="{x:Static local:Player.Red}">
                                                    <DataTrigger.EnterActions>
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <DoubleAnimation
                                            Storyboard.TargetProperty="RenderTransform.(TranslateTransform.Y)"
                                            From="-500" To="0" Duration="0:0:0.55"
                                            EasingFunction="{StaticResource BounceEase}"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </DataTrigger.EnterActions>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Player}" Value="{x:Static local:Player.Yellow}">
                                                    <DataTrigger.EnterActions>
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <DoubleAnimation
                                            Storyboard.TargetProperty="RenderTransform.(TranslateTransform.Y)"
                                            From="-500" To="0" Duration="0:0:0.55"
                                            EasingFunction="{StaticResource BounceEase}"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </DataTrigger.EnterActions>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Grid.Style>

                                    <Grid.RenderTransform>
                                        <TranslateTransform Y="0"/>
                                    </Grid.RenderTransform>

                                    <!-- Base color -->
                                    <Ellipse Fill="{Binding Player, Converter={StaticResource PlayerToBrushConverter}}" 
                     Stroke="Black" StrokeThickness="1"/>

                                    <!-- Radial shading (curved look) -->
                                    <Ellipse>
                                        <Ellipse.Fill>
                                            <RadialGradientBrush Center="0.5,0.5" RadiusX="0.9" RadiusY="0.9">
                                                <GradientStop Color="#00000000" Offset="0.65"/>
                                                <GradientStop Color="#55000000" Offset="1.0"/>
                                            </RadialGradientBrush>
                                        </Ellipse.Fill>
                                    </Ellipse>

                                    <!-- Softer glossy highlight (centered near top) -->
                                    <Ellipse Width="50" Height="25"
                     Margin="0,12,0,0"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Top">
                                        <Ellipse.Fill>
                                            <RadialGradientBrush GradientOrigin="0.5,0.3" Center="0.5,0.5" RadiusX="0.8" RadiusY="0.8">
                                                <GradientStop Color="#80FFFFFF" Offset="0"/>
                                                <!-- soft white center -->
                                                <GradientStop Color="#00FFFFFF" Offset="1"/>
                                                <!-- fades out -->
                                            </RadialGradientBrush>
                                        </Ellipse.Fill>
                                        <Ellipse.Opacity>0.25</Ellipse.Opacity>
                                    </Ellipse>
                                </Grid>

                                <!-- Hole outline -->
                                <Ellipse Stroke="Black" Opacity="0.18"/>
                            </Grid>
                        </DataTemplate>

                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Border>
        </Viewbox>
    </DockPanel>
</Window>
