<Window
    x:Class="ConnectFour.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="clr-namespace:ConnectFour.Converters"
    Title="Connect Four"
    Width="600"
    Height="560"
    WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <conv:PlayerToBrushConverter x:Key="PlayerToBrushConverter" />
        <BounceEase
            x:Key="BounceEase"
            Bounces="2"
            Bounciness="2"
            EasingMode="EaseOut" />
    </Window.Resources>
    <DockPanel Margin="12" LastChildFill="True">
        <!--  Top bar  -->
        <StackPanel
            Margin="0,0,0,8"
            VerticalAlignment="Center"
            DockPanel.Dock="Top"
            Orientation="Horizontal">
            <TextBlock
                Margin="0,0,6,0"
                VerticalAlignment="Center"
                Text="Starting Player:" />
            <ComboBox
                Width="100"
                Margin="0,0,12,0"
                ItemsSource="{Binding StartingPlayerOptions}"
                SelectedItem="{Binding StartingPlayer, Mode=TwoWay}" />
            <Button
                Width="90"
                Margin="0,0,12,0"
                Command="{Binding NewGameCommand}"
                Content="New Game" />
            <TextBlock
                VerticalAlignment="Center"
                FontWeight="Bold"
                Text="{Binding StatusText}" />
        </StackPanel>

        <!--  Board  -->
        <Border
            Padding="8"
            Background="#1E63B6"
            CornerRadius="8">
            <ItemsControl ItemsSource="{Binding Cells}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="7" Rows="6" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <!--  “Hole” look: blue board with white/colored discs  -->
                        <Grid Margin="4" MouseDown="Cell_MouseDown">
                            <Ellipse Fill="Black" Opacity="0.08" />
                            <Canvas>
                                <Ellipse Width="60" Height="60"
         Fill="{Binding Player, Converter={StaticResource PlayerToBrushConverter}}">
                                    <Ellipse.RenderTransform>
                                        <TranslateTransform x:Name="discTransform" Y="0"/>
                                    </Ellipse.RenderTransform>
                                    <Ellipse.Style>
                                        <Style TargetType="Ellipse">
                                            <Style.Triggers>
                                                <!-- Trigger when a token is placed (Player != None) -->
                                                <DataTrigger Binding="{Binding Player}" Value="Red">
                                                    <DataTrigger.EnterActions>
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <DoubleAnimation
                                    Storyboard.TargetProperty="RenderTransform.(TranslateTransform.Y)"
                                    From="-400" To="0" Duration="0:0:0.6"
                                    EasingFunction="{StaticResource BounceEase}"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </DataTrigger.EnterActions>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Player}" Value="Yellow">
                                                    <DataTrigger.EnterActions>
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <DoubleAnimation
                                    Storyboard.TargetProperty="RenderTransform.(TranslateTransform.Y)"
                                    From="-400" To="0" Duration="0:0:0.6"
                                    EasingFunction="{StaticResource BounceEase}"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </DataTrigger.EnterActions>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Ellipse.Style>
                                </Ellipse>

                            </Canvas>
                            <Ellipse Opacity="0.15" Stroke="Black" />
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Border>
    </DockPanel>
</Window>
